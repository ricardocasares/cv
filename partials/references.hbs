{{#if resume.references.length}}
<section id="references">
	<h2 class="f3 fw5 lh-copy mt4">References</h2>
	{{#each resume.references}}
	<div class="item mb4">
		{{#if reference}}
		<blockquote class="reference pl0 ml0 mb0 f4 lh-copy gray quotes">
			{{reference}}
		</blockquote>
		{{/if}}
		{{#if name}}
		<h3 class="name f5 fw5 mt2">
			{{name}}
		</h3>
		{{/if}}
	</div>
	{{/each}}
</section>
{{/if}}